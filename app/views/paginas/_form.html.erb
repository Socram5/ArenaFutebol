<%= simple_form_for @pagina, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :body %>
  <%= error_span(@pagina[:body]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                paginas_path, :class => 'btn btn-default' %>
<% end %>
